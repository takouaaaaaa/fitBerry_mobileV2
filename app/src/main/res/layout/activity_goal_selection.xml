<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Bouton retour -->

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:layout_marginBottom="24dp" />

        <!-- Texte principal -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What goal do you have in mind?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="24dp" />

        <!-- Option 1 -->
        <LinearLayout
            android:id="@+id/option_lose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_unselected_orange"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_lose_weight"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lose weight"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/text_dark" />

            <ImageView
                android:id="@+id/radio_lose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked" />

        </LinearLayout>

        <!-- Option 2 -->
        <LinearLayout
            android:id="@+id/option_maintain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_unselected_orange"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_maintain_weight"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Maintain weight"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/text_dark" />

            <ImageView
                android:id="@+id/radio_maintain"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked" />
        </LinearLayout>

        <!-- Option 3 -->
        <LinearLayout
            android:id="@+id/option_gain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_unselected_orange"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_gain_weight"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Gain weight"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/text_dark" />

            <ImageView
                android:id="@+id/radio_gain"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked" />
        </LinearLayout>

        <!-- Bouton suivant -->
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_next_button"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="14dp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>
</ScrollView>
