<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Ligne du haut -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                android:contentDescription="Back" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 of 4"
                android:textSize="14sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <!-- Titre principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's your gender?"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <!-- Option Female -->
        <LinearLayout
            android:id="@+id/option_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_unselected"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_female"
                android:contentDescription="Female"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="18sp"
                android:textColor="@color/text_dark"
                android:layout_weight="1" />

            <!-- Cercle radio -->
            <ImageView
                android:id="@+id/radio_female"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked" />
        </LinearLayout>

        <!-- Option Male -->
        <LinearLayout
            android:id="@+id/option_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_unselected"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_male"
                android:contentDescription="Male"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="18sp"
                android:textColor="@color/text_dark"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/radio_male"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked" />
        </LinearLayout>

        <!-- Option Other -->
        <LinearLayout
            android:id="@+id/option_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_unselected"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_other"
                android:contentDescription="Other"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textSize="18sp"
                android:textColor="@color/text_dark"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/radio_other"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_radio_unchecked" />
        </LinearLayout>

        <!-- Bouton Next -->
        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_next_button"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="14dp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>
</ScrollView>
