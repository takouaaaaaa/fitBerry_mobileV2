<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Time and Welcome -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:41"
                android:textSize="14sp"
                android:textColor="@color/text_gray"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_welcome_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome\nMehrez Hrouz"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:gravity="end"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

        <!-- Calories Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_calories_card"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <ProgressBar
                android:id="@+id/progress_calories"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progress="78"
                android:max="100"
                android:progressTint="@color/white"
                android:progressBackgroundTint="@color/white_alpha_50"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tv_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1721 Kcal\nof 2213 kcal"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>

        <!-- Macronutrients Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- Protein Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/progress_protein"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="87"
                    android:max="100"
                    android:progressTint="@color/protein_color"
                    android:progressBackgroundTint="@color/progress_bg"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78/90g"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Fats Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fats"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/progress_fats"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="64"
                    android:max="100"
                    android:progressTint="@color/fats_color"
                    android:progressBackgroundTint="@color/progress_bg"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_fats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45/70g"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Carbs Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbs"
                    android:textSize="14sp"
                    android:textColor="@color/text_gray"
                    android:layout_marginBottom="8dp"/>

                <ProgressBar
                    android:id="@+id/progress_carbs"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="86"
                    android:max="100"
                    android:progressTint="@color/carbs_color"
                    android:progressBackgroundTint="@color/progress_bg"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="95/110g"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Track Your Journey Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient_card"
            android:padding="20dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your diet journey"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tv_today_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today Calorie: 1721"
                android:textSize="16sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <!-- Weekly Chart Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Progress"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Add BarChart here -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- Week Days Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="W"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="T"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="F"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S"
                    android:gravity="center"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Recent Meals Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Meals"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray"/>

            </LinearLayout>

            <!-- Recent Meals Container -->
            <LinearLayout
                android:id="@+id/layout_recent_meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <!-- Add Meal Button -->
        <Button
            android:id="@+id/btn_add_meal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Add Meal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

</ScrollView>